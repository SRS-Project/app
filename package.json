{
  "name": "@srs-project/app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rm -rf dist",
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development START_HOT=1 npm run dev-renderer",
    "dev-main": "webpack --mode development --config webpack.main.config.ts && electron ./dist/main.js",
    "dev-renderer": "webpack-dev-server --mode development --config webpack.renderer.dev.config.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest",
    "test-ci": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/SRS-Project/app.git"
  },
  "keywords": [
    "srs"
  ],
  "author": "SRS Project",
  "license": "MIT",
  "dependencies": {
    "pouchdb-adapter-idb": "^6.4.3",
    "polished": "^1.9.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-transition-group": "^4.1.1",
    "rxdb": "^7.6.0",
    "rxjs": "^6.1.0",
    "rxjs-compat": "^6.1.0",
    "react-transition-group": "^4.1.1",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-syntax-decorators": "^7.0.0-beta.46",
    "@babel/plugin-syntax-jsx": "^7.0.0-beta.46",
    "@babel/plugin-syntax-typescript": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/jest": "^23.0.0",
    "@types/pouchdb-adapter-idb": "^6.1.2",
    "@types/mockdate": "^2.0.0",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-test-renderer": "^16.0.1",
    "@types/webpack": "^4.1.4",
    "@types/webpack-merge": "^4.1.3",
    "awesome-typescript-loader": "^5.0.0",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.4",
    "electron": "^2.0.0",
    "electron-compile": "^6.4.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "lint-staged": "^7.0.5",
    "mockdate": "^2.0.2",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "react-hot-loader": "^4.1.2",
    "react-test-renderer": "^16.3.2",
    "ts-jest": "^23.0.0",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "setupTestFrameworkScriptFile": "./src/setupTests.ts",
    "testRegex": "\\.spec\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "tslint -c tslint.json -p tsconfig.json ",
      "git add"
    ]
  }
}
